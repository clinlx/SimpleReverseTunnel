# Use the .NET SDK image for building
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
# Install dependencies for AOT publishing
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       clang zlib1g-dev
WORKDIR /src

# Copy project files and restore dependencies
COPY ["SimpleReverseTunnel.csproj", "./"]
RUN dotnet restore "SimpleReverseTunnel.csproj"

# Copy the rest of the source code
COPY . .

# Publish the application (triggers AOT build if enabled in csproj)
RUN dotnet publish "SimpleReverseTunnel.csproj" -c Release -r linux-x64 -o /app/publish

# Use ubuntu image for the final stage
FROM ubuntu:22.04 AS final
WORKDIR /app
COPY --from=build /app/publish .

# Environment variables for configuration
ENV BRIDGE_PORT=9000
ENV PUBLIC_PORT=9001
ENV PASSWORD=MySecret

# Set the entrypoint to use environment variables
ENTRYPOINT ["/bin/sh", "-c", "exec ./SimpleReverseTunnel server $BRIDGE_PORT $PUBLIC_PORT $PASSWORD"]
